################################################################################
# サフィックスエイリアス
################################################################################
if is-at-least 4.2; then
    alias -s {tar.gz,tar.Z,tgz,tar,gz,zip,tar,bz2,tbz2,bz2,lzh,rar,Z}='muncompress'
fi

muncompress () {
    for file in "$@"
      do
      case $file in
          *.tar.gz ) tar xzvf   $file ;;
          *.tar.Z  ) tar xzvf   $file ;;
          *.tgz    ) tar xzvf   $file ;;
          *.tar    ) tar xvf    $file ;;
          *.gz     ) gunzip     $file ;;
          *.zip    ) unzip      $file ;;
          *.tar.bz2) tar xjvf   $file ;;
          *.tbz2   ) tar xjvf   $file ;;
          *.bz2    ) bzip2 -d   $file ;;
          *.lzh    ) lha x      $file ;;
          *.rar    ) rar x      $file ;;
          *.Z      ) uncompress $file ;;
	      *)
              echo "Can't decide how to uncompress $file."
              ;;
		esac
	done
}

