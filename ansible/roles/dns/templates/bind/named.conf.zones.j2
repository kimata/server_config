# Generated by Ansible for {{ ansible_hostname  }}.{{ network.domain }}

view "internal" {
    match-clients { local-area; };

    zone "." IN {
        type            hint;
        file            "/etc/bind/db.root";
    };
    zone "localhost" IN {
        type            master;
        file            "/etc/bind/db.local";
    };
    zone "127.in-addr.arpa" IN {
        type            master;
        file            "/etc/bind/db.127";
    };
    zone "{{ network.domain }}" IN {
        type            master;
        file           "/var/cache/bind/db.{{ network.domain }}-internal";
        allow-update    { localhost; };
    };
    zone "{{ network.zone }}.in-addr.arpa" IN {
        type            master;
        allow-update    { localhost; };
        file            "/var/cache/bind/db.{{ network.zone }}";
    };
};

