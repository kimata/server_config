# Generated by Ansible for {{ ansible_hostname  }}.{{ network.domain }}

FQDNLookup      true
Interval        120

LoadPlugin      syslog
LoadPlugin      unixsock
LoadPlugin      df
LoadPlugin      interface
LoadPlugin      hddtemp
LoadPlugin      network
LoadPlugin      exec
LoadPlugin      snmp

<Plugin syslog>
    LogLevel    info
</Plugin>

<Plugin unixsock>
  SocketFile    "/var/run/collectd-unixsock"
  SocketGroup   "root"
  SocketPerms   "0770"
  DeleteSocket  true
</Plugin>

<Plugin df>
    MountPoint "/storage/"
    IgnoreSelected false
</Plugin>

<Plugin interface>
    Interface "lo"
    IgnoreSelected true
</Plugin>

<Plugin hddtemp>
    Host "127.0.0.1"
    Port "7634"
</Plugin>

<Plugin network>
    Server "{{ network.influxdb }}" "25826"
</Plugin>

{% if ansible_hostname == 'columbia' %}
<Plugin snmp>
    <Data "temperature">
        Type "temperature" 
        Table false
        Instance ""
        Values ".1.3.6.1.4.1.1182.2.1.15.0"
    </Data>
    <Host "RTX1210">
        Address "192.168.2.1"
        Version 1
        Community "public"
        Collect "temperature"
    </Host>
</Plugin>
{% endif %}

# ansible_ssh_user は zpool コマンドをパスワード無しで sudo できる前提．
# 詳細はスクリプト参照．
<plugin exec>
    Exec "{{ lookup('env','USER') }}:sudo" "/usr/lib/collectd/zpool_df.py"
</plugin>

