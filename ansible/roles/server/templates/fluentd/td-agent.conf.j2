# Generated by Ansible for {{ ansible_nodename  }}

<system>
    log_level info
</system>    

################################################################################
# ソース
################################################################################
<source>
  @type forward
</source>

<source>
  @type http
  port 8888
</source>

<source>
  @type debug_agent
  bind 127.0.0.1
  port 24230
</source>

################################################################################
# 処理
################################################################################
<filter {sensor.**,fplug.**,wemo.**}>
  @type typecast
  types temp:float,humi:float,lux:float,rain:float,pm10:float,pm25:float,pm40:float,pm100:float,uva:float,uvb:float,uvi:float
</filter>

<match sensor>
  @type rewrite_tag_filter
  <rule>
    key     hostname
    pattern ESP32
    tag     sensor.esp32
  </rule>
  <rule>
    key     hostname
    pattern rasp
    tag     sensor.raspberrypi
  </rule>
  <rule>
    key     hostname
    pattern rpi-cm4
    tag     sensor.raspberrypi
  </rule>
</match>

<filter {sensor.esp32,fplug.**,wemo.**}>
  @type record_transformer
  enable_ruby
  renew_time_key self_time
  auto_typecast
  enable_ruby
  <record>
    self_time ${Time.now.to_i - record["self_time"].to_i }
  </record>
</filter>

<match {sensor.**,fplug.**,wemo.**}>
  @type copy
  <store>
    @type influxdb
    host localhost
    dbname sensor
    tag_keys ["hostname"]
    time_precision s
    flush_interval 10
  </store>
  <store>
    @type file
    path /dev/shm/td-agent.dump
  </store>
</match>

